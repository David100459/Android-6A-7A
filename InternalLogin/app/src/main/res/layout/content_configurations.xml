<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_configurations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="164dp">


        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#D3374E"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_w2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color de fondo de las activities:"
                android:textColor="#0B0A0A"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_baGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="verde" />

            <Button
                android:id="@+id/btn_baBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:text="azul" />

            <Button
                android:id="@+id/btn_baYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="amarillo" />

            <TextView
                android:id="@+id/tv_w3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color de texto de las activities:"
                android:textColor="#0B0A0A"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_txtGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="verde" />

            <Button
                android:id="@+id/btn_txtBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="azul" />

            <Button
                android:id="@+id/btn_txtYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:text="amarillo" />

            <TextView
                android:id="@+id/tv_w4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Color de los botones de las activities:"
                android:textColor="#0B0A0A"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="verde" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:text="azul" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="amarillo" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>